<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.dawid.listit">

    <application
            android:name=".ListItApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".ui.addedittask.AddEditTaskActivity"
                android:label="@string/title_activity_add_edit_task"
                android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".ui.applicationPreferences.ApplicationPreferencesActivity" />
        <activity android:name=".ui.tasks.TasksActivity" />
        <activity
                android:name=".ui.addeditlist.AddEditListActivity"
                android:theme="@style/Dialog" />
        <activity android:name=".ui.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>